<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="it.alessioricco.marvelbrowser">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="it.alessioricco.marvelbrowser.activities.list.ComicsListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="it.alessioricco.marvelbrowser.activities.details.ComicsDetailActivity"
            android:label="@string/title_journey_detail"
            android:parentActivityName="it.alessioricco.marvelbrowser.activities.list.ComicsListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="it.alessioricco.marvelbrowser.activities.list.ComicsListActivity" />
        </activity>
    </application>

</manifest>