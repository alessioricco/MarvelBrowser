

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/colorDetailBg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text=""
            android:id="@+id/comicbook_title"
            android:paddingTop="@dimen/padding_detail"
            android:paddingLeft="@dimen/padding_detail"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal|bold" />

        <TextView
            android:text=""
            android:id="@+id/comicbook_description"
            android:paddingTop="@dimen/padding_detail"
            android:paddingLeft="@dimen/padding_detail"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal" />

        <TextView
            android:text=""
            android:id="@+id/comicbook_authors"
            android:paddingTop="@dimen/padding_detail"
            android:paddingLeft="@dimen/padding_detail"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal" />

        <TextView
            android:text=""
            android:id="@+id/comicbook_pages"
            android:paddingTop="@dimen/padding_detail"
            android:paddingLeft="@dimen/padding_detail"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal" />

        <TextView
            android:text=""
            android:id="@+id/comicbook_cost"
            android:paddingTop="@dimen/padding_detail"
            android:paddingLeft="@dimen/padding_detail"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal" />

    </LinearLayout>

